<?xml version="1.0" encoding="utf-8"?>
<com.wangzs.tvdemo.widgets.ImgConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FocusStyle"
    android:padding="8dp"
    android:id="@+id/cl_type_seven"
    android:layout_width="198dp"
    android:layout_height="111dp">

    <ImageView
        android:id="@+id/iv_type_seven_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        android:background="@drawable/selector_text_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="诛仙" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_focus_selector"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
</com.wangzs.tvdemo.widgets.ImgConstraintLayout>